                                  <option>선택</option>
                                  <!-- <option disabled selected hidden>Please Choose...</option> -->
                                  <% for(var j=0;j<jsonArray.length;j++){ %>
                                      <option value=<%= jsonArray[j] %>><%= jsonArray[j] %></option>
                                  <% } %>
                          </select>
                      </div>
                  <% } %>
              <% } %>

              </div>
          </div>
